%h1 Listing notes

%table
  %thead
    %tr
      %th Date
      %th Content
      %th User
      %th
      %th
      %th

  %tbody
    - @notes.each do |note|
      %tr
        %td= note.date
        %td= note.content
        %td= note.user.name
        %td= link_to 'Show', [@user, note]
        %td= link_to 'Edit', edit_user_note_path(@user, note)
        %td= link_to 'Destroy', [@user, note], :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

