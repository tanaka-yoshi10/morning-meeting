- if user_signed_in?
  %li.dropdown
    %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
      = current_user.email
      %span.caret
    %ul.dropdown-menu
      %li= link_to 'マイページ', '#'
      %li= link_to '設定', '#'
      %li.divider
      %li= link_to 'ログアウト', destroy_user_session_path, method: :delete
- else
  %li= link_to 'サインアップ', new_user_registration_path
  %li= link_to 'ログイン', new_user_session_path

